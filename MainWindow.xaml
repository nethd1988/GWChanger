<Window x:Class="GWChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GWChanger"
        mc:Ignorable="d"
        Title="Gateway Kzonesoft - Gà Luoc" 
        Height="450" 
        Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="#FF4500" 
                                BorderThickness="2" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4500" TargetName="border"/>
                                <Setter Property="BorderBrush" Value="#FF7F50" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CC3700" TargetName="border"/>
                                <Setter Property="BorderBrush" Value="#FF4500" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#333" TargetName="border"/>
                                <Setter Property="BorderBrush" Value="#555" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="GatewayText">
            <Setter Property="Foreground" Value="#FF4500"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,20"/>
        </Style>

        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Foreground" Value="#FF4500"/>
        </Style>
    </Window.Resources>

    <Border Background="#2D2D30" CornerRadius="10" Margin="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Current Gateway Section -->
            <TextBlock Grid.Row="0" 
                       Text="Gateway đang sử dụng:" 
                       Style="{StaticResource HeaderText}"/>

            <TextBlock Grid.Row="1" 
                       x:Name="CurrentGatewayText"
                       Text="192.168.1.1" 
                       Style="{StaticResource GatewayText}"/>

            <!-- Gateway Selection Section -->
            <TextBlock Grid.Row="2" 
                       Text="Đổi sang Gateway:" 
                       Style="{StaticResource HeaderText}"/>

            <ComboBox Grid.Row="3" 
                      x:Name="GatewayComboBox"
                      Margin="0,5,0,10"
                      SelectionChanged="GatewayComboBox_SelectionChanged">
                <ComboBox.Resources>
                    <!-- Styling cho ComboBoxItem -->
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Setter Property="Background" Value="#B3E0FF"/>
                        <Setter Property="Foreground" Value="#000000"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="#A0A0A0" 
                                            BorderThickness="0,0,0,1">
                                        <ContentPresenter Margin="5,3" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#66B2FF"/>
                                            <Setter Property="Foreground" Value="#000000"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#99CCFF"/>
                                            <Setter Property="Foreground" Value="#000000"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ComboBox.Resources>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}" 
                                   FontSize="14" 
                                   Foreground="#000000" 
                                   FontWeight="SemiBold"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Action Buttons -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="ChangeButton"
                        Content="Đổi Gateway"
                        Style="{StaticResource ActionButton}"
                        Click="ChangeButton_Click"/>

                <Button Grid.Column="1"
                        x:Name="ExitButton"
                        Content="Thoát"
                        Style="{StaticResource ActionButton}"
                        Click="ExitButton_Click"/>
            </Grid>

            <!-- Progress Bar -->
            <ProgressBar Grid.Row="5"
                         x:Name="ProgressBar"
                         Margin="0,10,0,5"
                         Maximum="100"
                         Value="0"/>

            <TextBlock Grid.Row="6"
                       x:Name="StatusText"
                       Text="Hoàn tất"
                       HorizontalAlignment="Center"
                       Foreground="#FFFFFF"
                       Margin="0,0,0,15"/>

            <!-- Logo Section -->
            <Border Grid.Row="7" 
                    BorderBrush="#555" 
                    BorderThickness="0,1,0,0" 
                    Padding="0,15,0,0">

                <StackPanel>
                    <TextBlock Text="KzoneSoft - Gà Luoc" 
                               Foreground="#FF4500" 
                               FontWeight="Bold" 
                               FontSize="16"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Phần mềm quản lý Gateway" 
                               Foreground="#FF4500" 
                               FontWeight="Bold" 
                               FontSize="14"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Sản phẩm dành cho phòng game và doanh nghiệp" 
                               Foreground="#FFFFFF" 
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>